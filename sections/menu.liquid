
  {% assign company_name = block.settings.company_name %}
  <div>
    <div>
      <h3>
        {{ company_name }}
        <span>.</span>
      </h3>
    </div>
    <div>
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>
  </div>

{% schema %}
  {
    "blocks": [
      {
        "type":"menu",
        "name":"Menu",
        "settings": [
            {
                "id":"company_name",
                "type":"text",
                "label":"Company Name"
            }
        ]
      }
    ]
  }
{% endschema %}