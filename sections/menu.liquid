{% for block in section.blocks %}
  {% assign company_name = block.settings.company_name %}
  <div class="menu-wrapper">
    <div class="menu-left">
      <h3>
        {{ company_name }}
        <span>.</span>
      </h3>
    </div>
    <div class="menu-center">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>
    <div class="menu-right">
        <span class="icon icon-cart" aria-hidden="true"></span>
    </div> 
  </div>
{% endfor %}

{% schema %}
  {
    "blocks": [
      {
        "type":"menu",
        "name":"Menu",
        "settings": [
            {
                "id":"company_name",
                "type":"text",
                "label":"Company Name"
            }
        ]
      }
    ]
  }
{% endschema %}